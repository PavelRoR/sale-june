			+course(classes[11],imgClasses[11],'Монетизация','Анна Ролева и Вероника Юрина','10 000','6 720',modals[11],links[11], '5 400', '“Личный бренд”')
		.row
			+course(classes[12],imgClasses[12],'Работа с убеждениями','Ольга Кононенко','10 000','600',modals[12],links[12])
			+course(classes[13],imgClasses[13],'Работа со страхами','Ольга Кононенко','10 000','600',modals[13],links[13])
			+course(classes[14],imgClasses[14],'Работа с тенью','Ольга Кононенко','10 000','1 00',modals[14],links[14])
		.row
			+course(classes[15],imgClasses[15],'Ресурс тотемного животного','Ольга Кононенко','10 000','500',modals[15],links[15])
			+course(classes[16],imgClasses[16],'Самоисполняющиеся цели','Ольга Кононенко','10 000','1 500',modals[16],links[16])
			+course(classes[17],imgClasses[17],'Финансовая растяжка + Потоковое везение','Ольга Кононенко','10 000','800',modals[17],links[17])
		.row
			+course(classes[18],imgClasses[18],'Я - концепция','Ольга Кононенко','10 000','800',modals[18],links[18])
			.col-md-8.col-sm-8
				.course.course-20
					.course-img(class= imgClasses[19])
					.course-body
						h4.course-name Мини-курсы: “Любовь и отношения в ДЧ” + “Из теней в дары” + “Силовое поле”. 
							span 3 по цене 2
						p.course-auhtor Анна Ролева и Вероника Юрина
						p.price.course-full-price 10 000руб.
						p.price.course-price 8 140
							span руб.
					.course-footer.course-footer-20
						.button.button-more(data-modal=modals[19])
							button(type="submit")  Подробнее
						.button.button-link
							a(href= links[19] target="_blank") Купить