#main
	padding 0 0 10%
	background-color: #3D174E
	background-image url(../img/backgrounds/main_bg.jpg)
	background-repeat no-repeat
	background-position: center bottom
	background-size: cover
	color #fff
	overflow hidden
	.container
		position relative
		z-index 9
#main-img
	position: absolute
	right -50px
	bottom: -100px
	width 636px
	height 632px
	background-image url(../img/images/main_img.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	z-index -1
header 
	padding 1% 0 
	overflow hidden
	margin-bottom: 4%
#logo
	display block
	float left
	width 283px
	height 51px
	background-image url(../img/images/logo.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
.contacts
	float: right
	text-align: right
	line-height: 51px
.contact
	padding-left: 30px
	margin-left: 10px
	font-family: "UbuntuBold", sans-serif;
	background-repeat no-repeat
	background-position: left center
	background-size 30px
	&:first-of-type
		margin-left: 0
.contact-phone
	background-image url(../img/contacts/phone.png)
.contact-skype
	background-image url(../img/contacts/skype.png)
.contact-mail
	background-image url(../img/contacts/mail.png)
.pre
	font-size: 55px;
	font-family: "RubikLight", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1.418;
	text-transform: uppercase
.main-title
	font-size: 80px;
	font-family: "RubikBold",sans-serif;
	color: rgb(255, 255, 255);
	line-height: 1
	width 100%
	max-width: 601px;
	margin 3% 0 2%
	text-transform: uppercase
.main-subtitle
	font-size: 80px;
	font-family: "RubikMedium", sans-serif;
	border 4px solid #fff
	display: inline-block
	padding: 0 25px
	text-transform: uppercase
	box-shadow: 0 0  24px 13px rgba(255,255,255,.63)
	span
		font-size: 95px
.main-text
	font-size: 30px;
	font-family: "RubikLight", sans-serif;
	color: rgb(255, 255, 255);
	line-height: 0.7;
	margin-top: 2.5%