#last
	padding 30px 0
	background-color: #211C32
	background-image url(../img/backgrounds/last_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.last-text
	width 100%
	max-width 895px
	margin 0 auto
	background-image url(../img/images/last_img.png)
	background-repeat no-repeat
	background-position: left  center
	background-size contain
	padding 150px 0  180px
	overflow hidden
	p
		font-size: 35px
		font-family: 'RubikLight', sans-serif
		color #fff
		float: right
		width 100%
		max-width 500px
		&:nth-of-type(2)
			margin 30px 0 35px
		&:last-of-type
			font-size: 40px
			font-family: 'RubikItalic', sans-serif
			text-decoration: underline