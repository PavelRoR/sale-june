@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.modal-window
		margin-top: 40px
		max-width 1000px
@media screen and (max-width 1199px)
	#logo
		float: none
		margin 0 auto 5px
	.contacts
		float: none
		text-align: center
		line-height: 1.3
	.contact
		margin 5px 5px 0
	#main-img
		right -250px
	#second-img
		right: -300px
	.course-body
		min-height 303px
	.body-scroll
		padding-right: 0
@media screen and (max-width 991px)
	#main
		text-align: center
	.main-title
		margin-left: auto
		margin-right: auto
	#main-img
		display: none
	.pre
		font-size: 40px
	.main-title
		font-size: 60px
	.main-subtitle
		font-size: 50px
		span
			font-size: 60px
	#second-img
		display block
		margin  0 auto 30px
		position: static
		width 100%
		height 300px
	.second-text
		text-align: center
		margin-left: auto
		margin-right: auto
	.course-body
	.course-footer-20
	.course-footer
		min-height: 1px
		display block
	.course-footer
		padding 0 20px 25px
	.course-img
		height 170px
	.course-20
		max-width 370px
	.course-footer-20 .button-more
		margin 25px auto 15px
	.last-text
		background-image: none
	.last-text p
		float: none
		margin-left: auto
		margin-right: auto
		text-align: center
	.last-text p:nth-of-type(2)
		margin-left: auto
		margin-right: auto
	#last
		padding 6% 0
	.last-text
		padding 0
	.modal-window
		max-width 100%
		width 96%
	.course-body
		padding 20px
	.button-more
		margin-top: 0
@media screen and (max-width 485px)
	#logo
		width 160px
		height 30px
	.contact
		font-size: 14px
		line-height: 18px
		background-size: 18px
		padding-left: 20px
	.pre
		font-size: 28px
	.main-title
		font-size: 40px
	.main-subtitle
		font-size: 30px
		span
			font-size: 35px
	.main-text
		font-size: 22px
	.second-text
		margin-bottom: 20px
	.courses-title
		font-size: 26px
		margin-bottom: 30px
	.course-img
		height 140px
		background-position: center
	.course-name
		font-size: 24px
	.course-auhtor
		font-size: 21px
	.price
	.last-text p
		font-size: 26px
	.last-text p:nth-of-type(2)
		margin 20px 0
	.last-text p:last-of-type
		font-size: 30px
	footer h5
		font-size: 18px
	.soc_buttons a
		margin 10px 5px
	footer .conditions, footer p
		font-size: 12px
@media screen and (max-width 380px)
	.pre
		font-size: 22px
	.main-title
		font-size: 30px
		margin-bottom: 4%
	.main-subtitle
		font-size: 25px
		span
			font-size: 30px
	.main-text
		font-size: 18px
		margin-top: 5%
	#second-img
		height 200px
	.second-text
		margin-bottom: 15px
	.courses-title
		font-size: 24px
	.course-body
		padding 15px
	.course-footer
		padding 0 15px 20px
	.last-text p
		font-size: 22px