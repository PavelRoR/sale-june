button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 50px
	line-height: 30px
	text-align: center
	font-size: 24px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	&:hover
		color: #F0F0F0
		background-color: #000

.customHidden
	opacity: 0;
	z-index: -9999

.body-scroll
	overflow hidden
	padding-right: 17px

.modal-text
	color: #fff
	line-height: 1.4
	margin-bottom: 15px
	width 100%
	max-width 95%
	&:last-of-type
		margin-bottom: 0
	span
		font-family: 'RubikMedium', sans-serif
.modal-title
	font-size: 24px
	font-family: 'RubikBold', sans-serif
	margin-bottom: 20px
	color #fff
.modal-subtitle
	font-size: 22px
	font-family: 'RubikMedium', sans-serif
	margin: 20px 0
	color #fff
.modal-list
	margin-left: 40px
	li
		margin-bottom: 10px
		color #fff
		line-height: 1.4
		&:last-child
			margin-bottom: 0
.button-modal
	margin-top: 35px
	margin-bottom: 20px
.modal-text-bonus
	margin-top: 20px
