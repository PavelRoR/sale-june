footer
	width 100%
	padding 20px 0
	text-align: center
	background-color: #fff
	h5
		font-size: 20px;
		color: #000
		margin 0
		font-family: 'RubikBold', sans-serif
	p
	.conditions
		font-size: 14px;
		font-family: 'UbuntuBold',sans-serif
		color: rgba(0, 0, 0, .6);
	.conditions
		margin 15px 0 0
		text-decoration: underline
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 15px 7px 20px
		position relative
		z-index: 1
		.fa
			border-radius: 50px
			background-color: #fff
			border: 1px solid #000
			width: 32px;
			height: 32px;
			color #122138
			line-height 32px
			font-size 18px
			position relative
			z-index 9
			transition all .3s ease
		&:hover
			.fa
				background-color: #000
				color #fff
.modal-wrapper
	opacity 1
	position: fixed
	top 0
	bottom 0
	left 0
	right 0
	background-color: rgba(0,0,0,.8)
	z-index 99
	width 100%
	height 100%
	overflow-x: hidden;
	overflow-y: auto;
.modal-window
	position: absolute
	top 0
	left 0
	right 0
	margin 20px auto
	border-radius: 5px
	background-color #271B3F
	border: 4px solid #ffffff
	box-shadow: 0 0 24px 13px rgba(255,255,255,0.63);
	padding 20px
	width 100%
	max-width 800px
	height auto
	max-height 90%
	max-height 90vh
	z-index: 99;
	overflow-x: hidden;
	overflow-y: auto;

